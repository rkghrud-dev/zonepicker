<Window x:Class="ZoneRouter.UI.ZonePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zone 선택"
        Width="320" Height="220"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="이 창을 어느 Zone으로 보낼까요?"
                   Foreground="White" FontSize="14" FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <UniformGrid Grid.Row="1" Rows="2" Columns="2" >
            <Button x:Name="BtnZone1" Content="Zone 1 (좌상)" Margin="4"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Click="ZoneBtn_Click" Tag="1"/>
            <Button x:Name="BtnZone2" Content="Zone 2 (우상)" Margin="4"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Click="ZoneBtn_Click" Tag="2"/>
            <Button x:Name="BtnZone3" Content="Zone 3 (좌하)" Margin="4"
                    Background="#FF9800" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Click="ZoneBtn_Click" Tag="3"/>
            <Button x:Name="BtnZone4" Content="Zone 4 (우하)" Margin="4"
                    Background="#9C27B0" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Click="ZoneBtn_Click" Tag="4"/>
        </UniformGrid>
    </Grid>
</Window>
